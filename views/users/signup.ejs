<%- layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <h3>SignUp On Airbnb</h3>
            <form method="post" action="/signup" class="mt-5 needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label"> Username </label>
                    <input type="text" name="username" class="form-control" id="username" required/>
                    <div class="invalid-feedback">** please fill username</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label"> Password </label>
                    <input type="password" name="password" class="form-control" id="password" required/>
                    <div class="invalid-feedback">** please fill password</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label"> Email </label>
                    <input type="email" name="email" class="form-control" id="email" required/>
                    <div class="invalid-feedback">** Something went wrong</div>
                </div>

                <div class="mb-5">
                    <button class="btn editBtn">SignUp</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>